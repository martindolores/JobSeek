@model JobSeek.Models.Application
@{
    ViewData["Title"] = "Candidates";
}

<form asp-action=Apply enctype="multipart/form-data" method="post">
    <div class="p-4 rounded border">
        <h6 style="font-weight:300">Application For</h6>
        <h1 class="display-4">@Model.Jobseeker.FirstName @Model.Jobseeker.LastName</h1>
        <h4>@Model.Jobseeker.PhoneNumber</h4>
        <h4>@Model.Jobseeker.Email</h4>
        <hr />
        <h6>@Model.JobOffer.Title</h6>
        <h6>@Model.JobOffer.JobType.JobTypes (@Model.JobOffer.JobCategory.JobCategories)</h6>
        <h6><i class="fa-solid fa-dollar-sign"></i>@Model.JobOffer.Wage</h6>
        <br />
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="p-4 rounded border">
                        <h6>Resume for @Model.Jobseeker.FirstName @Model.Jobseeker.LastName</h6>
                        <div class="row">
                            <div class="col">
                                <a class="btn btn-outline-secondary" data-toggle="modal" data-target="#exampleModal">Preview</a>
                            </div>
                            <div class="col">
                                <a class="btn btn-secondary" href="@Model.Resume">Download</a>
                            </div>
                        </div>

                    </div>
                    @if (Model.CoverLetter != null)
                    {
                        <div class="p-4 rounded border">
                            <h6>Cover Letter for for @Model.Jobseeker.FirstName @Model.Jobseeker.LastName</h6>
                            <div class="row">
                                <div class="col">
                                    <a class="btn btn-outline-secondary" data-toggle="modal" data-target="#exampleModal1">Preview</a>
                                </div>
                                <div class="col">
                                    <a class="btn btn-secondary" href="@Model.CoverLetter">Download</a>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Submit">
                    </div>
                </div>
                <div class="col">
                    <h6>Job Description</h6>
                    <hr />
                    @Model.JobOffer.Description
                    <br />
                    <hr />
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLong" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Resume</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <embed src="@ViewBag.resumePreview" class="w-100" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cover Letter</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" >
                <embed src="@ViewBag.coverLetterPreview" class="w-100" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
